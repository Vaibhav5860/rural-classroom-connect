# Copy this file to .env and fill secrets
# MONGO_URI is required and should be your MongoDB Atlas connection string (do NOT commit real secrets)
MONGO_URI=mongodb+srv://<db_user>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority
PORT=5000
# JWT secret used for signing tokens (set this)
JWT_SECRET=your_jwt_secret_here
